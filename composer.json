{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "parsh/php-mvc-framework",
    "description": "A simple PHP MVC framework",
    "type": "project",
    "autoload": {
        "psr-4": {
            "core\\": "core/",
            "controllers\\": "controllers/",
            "models\\": "models/",
            "form\\": "core/form/",
            "Dotenv\\": "Dotenv/",
            "exception\\": "core/exception"
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.6"
    },
    "minimum-stability": "stable",
    "license": "MIT"
}